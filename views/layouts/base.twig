<!DOCTYPE html>
<html {{ site.language_attributes }}>
{% block head %}
    {% include 'partials/head.twig' %}
{% endblock %}

<body class="{{ body_class }}">
{{ function('wp_body_open') }}
{% block skip_to_content %}
    {% include 'elements/skip-to-content.twig' %}
{% endblock %}
{% block site_header %}
    {{ include_with_context('partials/site-header.twig') }}
{% endblock %}
<div class="wrap" role="document">
    <main id="main">
        <div class="wrapper">
            {% block content %}
                Sorry, no content
            {% endblock %}
        </div>
