{
    "name": "sitchco/content-partial-block",
    "apiVersion": 3,
    "title": "Content Partial Block",
    "description": "A Gutenberg block for displaying content partials using ACF.",
    "category": "sitchco",
    "icon": "admin-page",
    "keywords": ["content", "partial", "acf"],
    "acf": {
        "mode": "preview",
        "renderCallback": "Sitchco\\Modules\\TimberModule::blockRenderCallback"
    },
    "supports": {
        "anchor": true,
        "align": true,
        "background": {
            "backgroundImage": true,
            "backgroundSize": true
        },
        "color": {
            "gradients": true
        },
        "dimensions": {
            "aspectRatio": true,
            "minHeight": true
        },
        "renaming": false,
        "shadow": true,
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true,
            "textAlign": true
        }
    }
}
